{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "lib": [
            "ESNext"
        ],
        "strict": true,
        "esModuleInterop": true,
        "jsx": "preserve",
        "skipLibCheck": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "allowJs": true,
        "checkJs": true,
        "forceConsistentCasingInFileNames": true,
    },
    "exclude": [
        "dist",
        "node_modules",
        "cypress"
    ]
}